{
  "private": true,
  "sideEffects": false,
  "scripts": {
    "build": "run-s -l build:*",
    "build:css": "npm run generate:css -- --minify",
    "build:remix": "remix build",
    "deploy": "fly deploy --remote-only",
    "dev": "run-p -l dev:*",
    "dev:css": "npm run generate:css -- --watch",
    "dev:remix": "remix dev",
    "start": "remix-serve build",
    "generate:css": "npx tailwindcss -o ./app/tailwind.css",
    "lint": "run-s -l lint:*",
    "lint:es": "eslint \"{app,prisma,test,cypress}/**/*.{js,jsx,ts,tsx}\"",
    "lint:ts": "tsc --noEmit --project tsconfig.json",
    "db:migrate": "run-p -l db:migrate:*",
    "db:migrate:dev": "npx prisma migrate dev",
    "db:migrate:test": "env-cmd -f .env.test npx prisma db push --accept-data-loss",
    "test": "run-s -l test:unit",
    "test:unit": "env-cmd -f .env.test vitest",
    "test:coverage": "env-cmd -f .env.test vitest run --coverage",
    "prepare": "husky install"
  },
  "dependencies": {
    "@prisma/client": "^4.0.0",
    "@remix-run/node": "^1.6.7",
    "@remix-run/react": "^1.6.7",
    "@remix-run/serve": "^1.6.7",
    "@remix-validated-form/with-zod": "^2.0.1",
    "daisyui": "^2.19.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-icons": "^4.4.0",
    "remix-auth": "^3.2.2",
    "remix-auth-twitter": "^0.1.0",
    "remix-validated-form": "^4.5.4",
    "vitest-mock-extended": "^0.1.10",
    "zod": "^3.17.10",
    "zod-form-data": "^1.2.1"
  },
  "devDependencies": {
    "@remix-run/dev": "^1.6.7",
    "@remix-run/eslint-config": "^1.6.7",
    "@types/react": "^17.0.45",
    "@types/react-dom": "^17.0.17",
    "c8": "^7.12.0",
    "env-cmd": "^10.1.0",
    "esbuild-register": "^3.3.3",
    "eslint": "^8.15.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "happy-dom": "^6.0.4",
    "husky": "^8.0.0",
    "lint-staged": "^13.0.3",
    "npm-run-all": "^4.1.5",
    "prettier": "2.7.1",
    "prettier-plugin-tailwindcss": "^0.1.12",
    "prisma": "^4.0.0",
    "tailwindcss": "^3.1.5",
    "typescript": "^4.6.4",
    "vitest": "^0.21.1"
  },
  "engines": {
    "node": ">=16"
  },
  "prisma": {
    "seed": "node --require esbuild-register prisma/seed/index.ts"
  }
}
